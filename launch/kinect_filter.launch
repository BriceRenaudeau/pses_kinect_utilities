<?xml version="1.0" encoding="utf-8"?>
<launch>
  <node pkg="nodelet" type="nodelet" name="kinect2" args="manager" output="screen"/>

  <node pkg="pses_kinect_filter" type="kinect_filter" name="kinect_filter" output="screen">
	<param name="depth_image_topic" type="str" value="/kinect2/sd/image_depth_rect" />
	<param name="output_depth_image_topic" type="str" value="/kinect_filtered/depth_image" />
	<param name="camera_info_topic" type="str" value="/kinect2/sd/camera_info" />
  </node>

  <node pkg="nodelet" type="nodelet" name="kinect2_points"
	args="load depth_image_proc/point_cloud_xyz kinect2" respawn="true" output="screen">
    <remap from="image_rect"        to="kinect_filtered/depth_image"/>
    <remap from="camera_info"        to="kinect_filtered/camera_info"/>
  </node>

</launch>
